        <StyleSheet Source="../Styles/Styles.css" />
    </ContentPage.Resources>

    <StackLayout >
        <Button Text="CSS En Xamarin" StyleClass="CSSButton" />
        <Label Text="Bienvenido Jheferson Huayta" TextColor="YellowGreen" StyleClass="lblTitulo" />

        <Image Source="dodge.jpg" />

        <Label x:Name="lbl" TextColor="Black" Text="Esto es Kimetsu " HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

        <Button Text="Click para ver el anime" VerticalOptions="EndAndExpand"/>
